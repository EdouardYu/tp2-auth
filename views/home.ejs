<html>
  <head>
    <meta charset="utf-8" />
    <link
      rel="stylesheet"
      href="/style/style.css"
      media="screen"
      type="text/css"
    />
  </head>
  <body>
    <div id="container">
      <h1>Hello <%= user.username %></h1>
      <p>Email: <%= user.email %></p>
      <p>Role: <%= user.role %></p>
      <% if (user.role === 'admin') { %>
      <a href="/users">View Users</a>
      <% } %>
    </div>

    <form action="/logout" method="GET" id="logout-form">
      <input type="submit" value="LOGOUT" />
    </form>
  </body>
</html>
